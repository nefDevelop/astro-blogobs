---
/**
 * 公共下拉面板组件
 * 用于壁纸切换、亮暗色切换、导航栏菜单等下拉面板
 */
interface Props {
	class?: string;
	// Permitir cualquier atributo HTML estándar
	[key: string]: any;
}

const { class: className, ...rest } = Astro.props; // Extraer 'class' y el resto de props
---

<div class:list={["float-panel p-2", className]} role="none" {...rest}>
	<slot />
</div>
